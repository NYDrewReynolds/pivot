<div class="admin-user">
  <div class="container">
    <%= form_for @user_staff_role, :url => restaurant_admin_user_staff_role_path(owned_restaurant, @user_staff_role), method: "patch" do |f| %>
        First Name: <%= @user_staff_role.user.first_name %><br/><br/>
        Last Name: <%= @user_staff_role.user.last_name %><br/><br/>
        Email: <%= @user_staff_role.user.email %><br/><br/>
        <%= f.label :cook_or_driver, "Cook or Driver?" %>
        <%= f.select :staff_role, ['cook', 'driver'], :selected => f.object.staff_role %>
        <br>
        <%= f.submit "Save Changes", class: "btn btn-primary btn-lg" %>
    <% end %>

    <%= link_to "Undo your changes", request.path, class: "btn btn-primary btn-lg" %>
    <%= link_to "Cancel", restaurant_admin_dashboard_index_path(owned_restaurant), class: "btn btn-primary btn-lg" %>

    <%= form_for(@user_staff_role, html: {multipart: true, method: 'delete'}, :url => restaurant_admin_user_staff_role_path(owned_restaurant, @user_staff_role) ) do |f| %>
     <%= f.submit "Delete This Account", class: 'btn btn-danger btn-lg' %>
    <% end %>
  </div>
</div>
