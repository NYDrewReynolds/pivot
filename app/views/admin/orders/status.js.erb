$('.status').text("<%= @order.status %>");
if ('<%= @order.status %>' === 'paid' ) {
  $('.status-button').remove();
  $('.status-buttons').html("<%=j link_to 'Mark as Completed', restaurant_admin_order_status_path(current_restaurant, @order.id, 'completed'), method: :PATCH, remote: true, class:'btn btn-grey3 status-button' %>");
} else if ('<%= @order.status %>' === 'completed') {
  $('.status-button').remove();
}
$('.updated').text('<%= (@order.updated_at).to_formatted_s(:long) %>');
