<h1 style="text-align:center">Your Profile</h1>

<div class="row">
    <div class="col-md-1 col-md-offset-5">
        <%= render 'form' %>
    </div>
    <%= link_to 'Your Orders', user_orders_path %>
    <% if current_user.staff_roles.any? %>
        <%= link_to "Restaurants Where You Work", user_restaurants_path, style: "padding-left: 10px" %>
    <% end %>
    <%= link_to "Create a Restaurant", new_restaurant_path, style: "padding-left: 10px" unless owned_restaurant  %>
</div>
