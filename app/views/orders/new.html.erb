<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1>New Order</h1>
        <% @order.errors.full_messages.each do |m| %>
            <%= m %>
        <% end %>
        <%= form_for @order do |f|%>

            <%= f.label :street_number %>
            <%= f.text_field :street_number %>

            <%= f.label :street %>
            <%= f.text_field :street %>

            <%= f.label :city %>
            <%= f.text_field :city %>

            <%= f.label :state %>
            <%= f.text_field :state %>

            <%= f.label :zip %>
            <%= f.text_field :zip %>

            <%= f.label "Pickup or Delivery?" %>
            <%= f.select :exchange, ['pickup', 'delivery'], :selected => 'pickup' %>
            <%= f.submit class: "btn btn-grey1"%>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Order Details</h3></div>
            <table class="table">
                <thead>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Restaurant</th>
                </thead>
                <tbody>
                    <% cart.item_ids_to_quantities.each do |item, quantity| %>
                        <tr id='<%= "item_#{item.id}" %>'>
                            <td><%= item.title %></td>
                            <td><%= quantity %></td>
                            <td><%= print_price(item.price) %></td>
                            <td><%= item.restaurant.name  %></td>
                        </tr>
                </tbody>
                    <% end %>
            </table>
        </div>
    </div>
</div>
</ul>
</div>
